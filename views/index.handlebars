
<div class="container">
  <div class="row">
    <div class="col-md-12 text-center" id="top-bar">
            <img src="/assets/imgs/burger-demo.png" alt="burger-img">
            <h1>Eat-Da-Burger!</h1>
    </div>

<!--Ordered Burgers Column-->
<div class="col-md-6 text-left">
<h4 class="text-center">Ordered</h4>
  <ul class="list-group text-center">
    {{#each burger}} 
   {{#unless devoured}}
    {{burger devoured=true}}
    {{/unless}}
  
    {{/each}}
    </ul>
</div>

<!--Devoured Burgers Column-->
<div class="col-md-6 text-right"> 
  <h4 class="text-center">Devoured</h4>
  <ul class="list-group text-center">
    {{#each burger }} 
    {{#if devoured}}
    {{burger devoured=false}}
    {{/if}}
    {{!-- <li class="list-group-item col-md d-inline-block text-center" id="burgers-added">
        {{burger_name}} 
        <button class="devour-burger btn btn-success btn-md" data-id="{{id}}" data-devoured="{{devoured}}"> {{#if devoured}}Yum!{{else}}Devour It!{{/if}}</button>
    </li> --}}
  
    {{/each}}
    </ul>
</div>

  </div> <!--row-->

</div>

<!--Add a Burger Form Submission-->
<form id="create-form">
    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>
    <div class="form-group">
        <label for="devoured">Devoured?</label>
        <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured<br>
        <input type="radio" name="devoured" value="0" id="notDevoured"> Not Devoured
    </div>
    <div class="modal-footer">
        <button type="submit" class="button">Add</button>
        <button type="button" class="button" data-dismiss="modal">Close</button>
    </div>
</form>




